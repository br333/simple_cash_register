<div class="container mt-5">
  <h1 class="title is-3 has-text-centered">Simple Cash Register</h1>

  <div class="columns">
    <div class="column is-two-thirds">
        <h2 class="subtitle is-4 mb-3">Products</h2>

        <div class="box" id="product-list">
            <% @products.each do |product| %>
                <div class="level py-2" data-cart-target="productRow" data-controller="cart" data-cart-product-id-value="<%= product.id %>">
                    <div class="level-left">
                        <div>
                            <strong><%= product.name %></strong><br>
                            <small class="has-text-grey">€<%= '%.2f' % product.price %></small><br>
                            <small class="has-text-grey-light is-block mt-1"><%= product.description %></small>
                        </div>
                    </div>

                    <div class="level-right">
                        <div class="buttons has-addons" >
                            <button class="button is-small is-danger" data-action="click->cart#removeToCart" data-cart-target="removeButton">−</button>
                            <button class="button is-small is-static" data-cart-target="quantity">0</button>
                            <button class="button is-small is-success" data-action="click->cart#addToCart" data-cart-target="addButton">+</button>
                        </div>
                    </div>
                </div>
                <hr>
            <% end %>
        </div>
    </div>

        <div class="column is-one-third">
            <h2 class="subtitle is-4 mb-3">Cart</h2>

            <div class="box" id="cart-summary" data-controller="cart">
                <table class="table is-fullwidth is-striped">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Qty</th>
                            <th class="has-text-right">Subtotal</th>
                            <th class="has-text-right">Total Price</th>
                        </tr>
                    </thead>

                    <tbody id="cart-summary-body">
                    </tbody>

                    <tfoot>
                        <tr>
                            <th colspan="3" class="has-text-right">Subtotal</th>
                            <th class="has-text-right" id="cart-summary-subtotal">€0.00</th>
                        </tr>
                        <tr>
                            <th colspan="3" class="has-text-right">Total</th>
                            <th class="has-text-right" id="cart-summary-total">€0.00</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>